[user]
	name = YOUR_NAME
	email = YOUR_EMAIL
	# signingkey = YOUR_SSH_KEY (optional - for commit signing with 1Password)
[color]
	ui = true
[push]
	default = simple
[core]
	editor = nano
	filemode = false
	ignorecase = false
	autocrlf = input
[merge]
	branchdesc = true
[init]
	defaultBranch = master
